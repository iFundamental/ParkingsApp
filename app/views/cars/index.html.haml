.row
  .col-xs-12
    .panel.panel-default
      .panel-heading
        %h2 Cars List
      .panel-body
        %table.table
          %thead
            %tr
              %th Model
              %th Registration number
              %th{:colspan => "3"}
          %tbody
            - @cars.each do |car|
              %tr
                %td= car.model
                %td= car.registration_number
                %td= link_to 'Show', car
                %td= link_to 'Edit', edit_car_path(car)
                %td= link_to 'Delete', car, method: :delete, data: { confirm: 'Are you sure?' }
      .panel-footer
        = link_to 'New Car', new_car_path
