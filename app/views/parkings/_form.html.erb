<%= form_for :parking, url: parkings_path do |f| %>
  <% if @parking.errors.any? %>
    <div>
      <h2>
        <%= pluralize(@parking.errors.count, "error") %> errors!
      </h2>
      <ul>
        <% @parking.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :kind %><br>
    <%= f.text_field :kind %>
  </p>
 
  <p>
    <%= f.label :places %><br>
    <%= f.number_field :places %>
  </p>

   <p>
    <%= f.label :hour_price %><br>
    <%= f.number_field :hour_price, step: 0.5 %>
  </p>

   <p>
    <%= f.label :day_price %><br>
    <%= f.number_field :day_price, step: 0.5 %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>

<% end %>