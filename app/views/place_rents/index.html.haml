- title "Place rentals"
.row
  .col-xs-12
    .panel.panel-default
      .panel-heading
        %h2 Rents
      .panel-body
        %table.table
          %thead
            %tr
              %th Start Date
              %th End Date
              %th Price
              %th{:colspan => "3"}
          %tbody
            - @place_rents.each do |place_rent|
              %tr
              %td= place_rent.starts_at.to_s(:long_ordinal)
              %td= place_rent.ends_at.to_s(:long_ordinal)
              %td= number_to_currency(place_rent.price, unit:"â‚¬")
              %td= link_to 'Show', place_rent_path(place_rent)
              %td= link_to 'Show Car', car_path(place_rent.car)
              %td= link_to 'Show Parking', parking_path(place_rent.parking)
      .panel-footer
