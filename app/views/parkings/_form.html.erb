<%= form_for @parking,  html: { class: 'form-horizontal' } do |f| %>
  <% if @parking.errors.any? %>
    <div>
      <h2>
        <%= pluralize(@parking.errors.count, "error") %> errors!
      </h2>
      <ul>
        <% @parking.errors.full_messages.each do |msg| %>
          <li class='alert alert-warning'><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :kind , class: 'col-sm-2 control-label' %>
    <div class='col-sm-10'>
      <%= f.text_field :kind, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :places , class: 'col-sm-2 control-label' %>
    <div class='col-sm-10'>
    <%= f.number_field :places, step: 1, class: 'form-control'  %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :hour_price, class: 'col-sm-2 control-label' %>
    <div class='col-sm-10'>
      <div class='input-group'>
        <div class="input-group-addon">€</div>
         <%= f.number_field :hour_price, step: 0.01, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :day_price, class: 'col-sm-2 control-label' %>
    <div class='col-sm-10'>
      <div class='input-group'>
        <div class="input-group-addon">€</div>
         <%= f.number_field :day_price, step: 0.01, class: 'form-control' %>
      </div>
    </div>
  </div>
  <%= f.fields_for :address do |ff| %>
    <div class="form-group">
      <%= ff.label :city , class: 'col-sm-2 control-label' %>
      <div class='col-sm-10'>
        <%= ff.text_field :city, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= ff.label :street , class: 'col-sm-2 control-label' %>
      <div class='col-sm-10'>
        <%= ff.text_field :street, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= ff.label :zip_code , class: 'col-sm-2 control-label' %>
      <div class='col-sm-10'>
        <%= ff.text_field :zip_code, class: 'form-control' %>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-default" %>
    </div>
  </div>
<% end %>
