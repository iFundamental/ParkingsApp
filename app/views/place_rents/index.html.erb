<%- title "Place rentals" %>

<h1>Rents</h1>

<table>
  <thead>
    <tr>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @place_rents.each do |place_rent| %>
      <tr>
        <td><%= place_rent.starts_at.to_s(:long_ordinal) %></td>
        <td><%= place_rent.ends_at.to_s(:long_ordinal) %></td>
        <td><%= number_to_currency(place_rent.price, unit:"â‚¬") %></td>
        <td><%= link_to 'Show', place_rent_path(place_rent) %></td>
        <td><%= link_to 'Show Car', car_path(place_rent.car)  %></td>
        <td><%= link_to 'Show Parking', parking_path(place_rent.parking)  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
